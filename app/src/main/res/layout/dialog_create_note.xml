<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:padding="7dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_title_en"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/edt_note_title_pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="70"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_title_pt"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/edt_note_title_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:maxLength="150"
        android:imeOptions="actionDone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:baselineAligned="false"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/note_create_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="@string/dialog_cancel"
                android:textStyle="bold"
                android:textColor="#777" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/note_create_dialog_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="@string/dialog_save"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:textColor="@color/action_bar" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>